<div class="drink-card justify-content-center">
  <h2>
    <%= @cocktail.name %>
  </h2>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li>
      <p><%= dose.description %>
      <%= dose.ingredient.name %>
      <%= link_to "<i class='far fa-times-circle'></i>".html_safe,
            dose_path(dose),
            method: :delete,
            data: { confirm: 'Are you sure?' }  %></p>
    </li>
    <% end %>
  </ul>
  <%= link_to 'Back', cocktails_path, class: "drink-btn" %>
  <%= link_to 'Add dose', new_cocktail_dose_path(@cocktail), class: "drink-btn" %>
</div>
