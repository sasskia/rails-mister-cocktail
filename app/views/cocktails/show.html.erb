<h1>
  <%= @cocktail.name %>
</h1>

<% @cocktail.doses.each do |dose| %>
<li class="list-group-item">
  <%= dose.description %>
  <%= dose.ingredient.name %>
  <%= link_to '❎ Delete',
        dose_path(dose),
        method: :delete,
        data: { confirm: 'Are you sure?' }  %>
</li>
<% end %>

<%= link_to 'Back', cocktails_path %> | <%= link_to 'Add dose', new_cocktail_dose_path(@cocktail) %>
